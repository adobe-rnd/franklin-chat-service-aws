{
  "name": "franklin-chat-service-aws",
  "version": "0.0.1",
  "description": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && esbuild --bundle ./src/index.js --minify --sourcemap=inline --platform=node --target=node16.14 --outdir=dist",
    "package": "npm run build && rm -rf function.zip && cd dist; zip -rq ../function.zip ../package.json .",
    "deploy-ci": "hedy -v --deploy --aws-region=us-east-1 --pkgVersion=dev$CIRCLE_BUILD_NUM -l dev --params-file=.env",
    "deploy": "hedy -v --deploy --aws-region=us-east-1 --params-file=.env",
    "logs": "aws logs tail /aws/lambda/aem-customer-chat-service",
    "lint": "eslint src/**/*.js",
    "fix": "eslint src/**/*.js --fix"
  },
  "wsk": {
    "nodeVersion": 18,
    "target": "aws",
    "name": "helix-services/aem-customer-chat-service@${version}",
    "testUrl": "/_status_check/healthcheck.json",
    "memory": 256,
    "awsRole!important": "arn:aws:iam::282898975672:role/service-role/aem-customer-chat-service-role-br9mksga",
    "awsDeployTemplate": "helix-tier3-deploy-template",
    "fastlyServiceId!important": "",
    "adapterFile": "./src/adapter.js"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "3.357.0",
    "@aws-sdk/client-dynamodb": "3.357.0",
    "@aws-sdk/lib-dynamodb": "3.358.0",
    "@magic-sdk/admin": "1.10.0",
    "@slack/bolt": "3.13.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.2",
    "@adobe/helix-deploy": "9.3.4",
    "@adobe/semantic-release-coralogix": "1.1.26",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "esbuild": "0.18.6",
    "eslint": "8.43.0",
    "semantic-release": "22.0.0"
  }
}
